<script>
  // Filter logic (anchors act like chips)
  const chipLinks = document.querySelectorAll('.portfolio-filters a');
  const cards = document.querySelectorAll('#portfolio [data-kind]');
  function setActive(target){ chipLinks.forEach(c => c.setAttribute('aria-pressed', c === target)); }
  function filter(kind){ cards.forEach(card => card.classList.toggle('hidden', kind !== 'all' && card.dataset.kind !== kind)); }
  chipLinks.forEach(link => {
    link.addEventListener('click', (e) => {
      e.preventDefault();
      setActive(link);
      filter(link.dataset.filter);
    });
  });
</script>
